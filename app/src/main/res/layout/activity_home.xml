<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.HomeActivity"
    android:orientation="vertical">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTabCatres"
            style="@style/TabbarCell"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:text="@string/cartes"
            android:padding="10dp"
            android:background="@drawable/border_dotted"/>

        <TextView
            android:id="@+id/textViewTabOffres"
            style="@style/TabbarCell"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:text="@string/offres"
            android:background="@drawable/border_dotted"/>

        <TextView
            android:id="@+id/textViewTabMap"
            style="@style/TabbarCell"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/black"
            android:text="@string/magasins"
            android:background="@drawable/border_dotted"/>

    </LinearLayout>



</LinearLayout>